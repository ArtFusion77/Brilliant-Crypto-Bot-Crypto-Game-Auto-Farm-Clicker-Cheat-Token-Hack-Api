<Window x:Class="Pixel_Bot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixel_Bot"
        mc:Ignorable="d"
        Title="Pixel Bot" Height="450" Width="800" ResizeMode="NoResize" Background="#ff2c2c2c">
    <Grid>
        <Button Name="ButtonSearchPixel" Click="OnButtonSearchPixelClick" Content="Search Pixel" HorizontalAlignment="Center" Margin="0, 50, 0, 0" 
                VerticalAlignment="Center" Width="200" Height="30" />
        <TextBox Name="TextBoxColor" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,50" TextWrapping="NoWrap" Text="#ffffff"
                 Width="200" Height="30" TextChanged="TextBoxColor_TextChanged" />

    </Grid>
</Window>
